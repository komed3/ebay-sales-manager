extends ./_base

block title
  title= title + ' — eBay Sales Manager'

block styles
  link( rel= "stylesheet", href= "/css/layout.min.css" )

block content
  header#header.header
    h1= title + ' — eBay Sales Manager'
    a.logout( href= "/logout", title= "Logout" )
      img( src= "/images/icons/logout.svg", alt= "Logout" )

  nav#nav.nav
    img.logo( src= "/images/favicon.svg", alt= "eBay Sales Manager" )
    a( href= "/dashboard", title= "Dashboard" )
      img( src= "/images/icons/app.svg", alt= "Dashboard" )
    a( href= "/new", title= "Hinzufügen" )
      img( src= "/images/icons/add.svg", alt= "Hinzufügen" )
    a( href= "/orders", title= "Bestellungen" )
      img( src= "/images/icons/table.svg", alt= "Bestellungen" )
    a( href= "/charts", title= "Statistik" )
      img( src= "/images/icons/chart.svg", alt= "Statistik" )
    a( href= "/map", title= "Karte" )
      img( src= "/images/icons/map.svg", alt= "Karte" )
    a( href= "/reports", title= "Reporte & Export" )
      img( src= "/images/icons/database.svg", alt= "Reporte & Export" )

  div.wrapper
    main#main.main
      block main

    footer#footer.footer
