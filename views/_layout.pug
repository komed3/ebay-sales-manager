extends ./_base
include ./mixin/nav

block title
  title= title + ' — eBay Sales Manager'

block scripts
  script( src= "/js/global.min.js", defer )

block styles
  link( rel= "stylesheet", href= "/css/layout.min.css" )

block content
  header#header.header.noselect
    h1= title + ' — eBay Sales Manager'
    div.header-actions
      +icon_nav( [
        { path: '/settings', label: 'Einstellungen', icon: 'settings.svg' },
        { path: '/logout', label: 'Abmelden', icon: 'logout.svg' }
      ] )

  nav#nav.nav.noselect
    img.logo( src= "/images/favicon.svg", alt= "eBay Sales Manager" )
    +icon_nav( [
      { path: '/', label: 'Dashboard', icon: 'app.svg' },
      { path: '/form', label: 'Hinzufügen', icon: 'add.svg' },
      { path: '/orders', label: 'Bestellungen', icon: 'table.svg' },
      { path: '/stats', label: 'Statistik', icon: 'chart.svg' },
      { path: '/commission', label: 'Kommissionierung', icon: 'users.svg' },
      { path: '/map', label: 'Karte', icon: 'map.svg' },
      { path: '/reports', label: 'Reporte & Export', icon: 'database.svg' }
    ] )

  div.wrapper
    main#main.main
      block main

    footer#footer.footer.noselect
      span Copyright &copy; 2025 <a href= "https://komed3.de" target="_blank">komed3</a>. Alle Rechte vorbehalten.
